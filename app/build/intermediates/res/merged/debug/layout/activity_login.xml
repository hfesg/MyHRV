<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_login"

    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/pic_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll_login"
        />
    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/userId_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/pic_login_edit_text_bg"
                android:textColor="#ece9e9"
                android:hint="用户名"
                android:paddingLeft="20dp"
                android:textColorHint="#B1B3B3" />

            <ImageView
                android:id="@+id/login_more_user"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/login_more_up"

                />
        </RelativeLayout>


        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/pic_login_edit_text_bg"
            android:hint="密码"
            android:textColor="#ece9e9"
            android:paddingLeft="20dp"
            android:textColorHint="#B1B3B3" />

        <CheckBox
            android:id="@+id/cb_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/selector_login_checkbox"
            android:paddingLeft="5dp"
            android:text="记住密码"
            android:textColor="#e4e2e2"

            />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="#fff"
            android:text="登录"
            android:textColor="#354840"
            android:textSize="15sp" />


    </LinearLayout>

    <Button
        android:id="@+id/regist"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/pic_button_sign_up_bg"
        android:onClick="onClick"
        android:text="注册账号"
        android:textColor="#f7f6f6"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>
